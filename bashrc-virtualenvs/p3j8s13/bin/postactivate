#!/bin/bash

# ---- Location where developer tools are installed ----
export TOOLS_HOME=${TOOLS_HOME:=$HOME/tools}

## ================================================================================
##                                                                                 
## In case you need a specific version of the JDK:                                 
##                                                                                 
##     Oracle now requires username and password in order to download the JDK.     
##     Unfortunately, this script cannot help you install the JDK automatically.   
##     You will have to download and install the JDK manually and update variables 
##     JAVA_VERSION and JAVA_HOME in your virtualenv profiles.                     
##                                                                                 
## In case you don't need a specific version of the JDK:                           
##                                                                                 
##     Simply install a default version of the OpenJDK for your distribution:      
##     $ sudo apt install default-jdk default-jdk-headless                         
##                                                                                 
## ================================================================================

unset JAVA_VERSION JAVA_HOME
export JAVA_VERSION=$(java -version 2>&1 | head -1 | cut -d\" -f2)
export JAVA_HOME=$(readlink -f $(which java) | sed s:/bin/java::)

# ---- Specify versions of tools to be installed by regular users ----
export SCALA_VERSION_MAJOR=2.13
export SCALA_VERSION=${SCALA_VERSION_MAJOR}.0
export SBT_VERSION=1.2.8
export M2_VERSION=3.6.1
export GRADLE_VERSION=5.2.1
export ANT_VERSION=1.9.14
export GROOVY_VERSION=2.5.4

export NODE_VERSION=10.16.0
export NODE_ARCH=linux-x64
export ANDROID_SDK_RELEASE=4333796
export ANDROID_SDK_VERSION=29.0.0

## ---- ENVIRONMENT DEPENDENT EXPORTS ----

export WORKSPACE=$HOME/workspace
[[ ! -d $WORKSPACE ]] && mkdir -p $WORKSPACE
